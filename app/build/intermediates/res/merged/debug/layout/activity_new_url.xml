<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.draggridview.NewUrl"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/lin06"
        android:background="@drawable/title"
        >

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l01"
        android:layout_below="@+id/lin06"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/t01"
            android:background="@drawable/just"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/l02"
        android:layout_below="@+id/l01"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextUrl"
            android:id="@+id/EditUrl"
            android:paddingStart="10dp"
            android:background="@drawable/enterweb"
            android:text="http://www.landbank.com.tw/"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l03"
        android:layout_below="@+id/l02"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/Button1"
            android:layout_below="@+id/EditUrl"
            android:background="@drawable/corrent"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/reenter"
            android:id="@+id/b02"
            android:layout_toRightOf="@+id/b01"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

</RelativeLayout>
