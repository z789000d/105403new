<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.draggridview.Join">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="暱稱"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/editext1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="帳號"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/editext2" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="密碼"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/editext3"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/editext4" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="確認密碼"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/editext5" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="信箱"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/editext5" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editext1"
        android:layout_alignLeft="@+id/editext2"
         />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editext2"

        android:layout_below="@+id/editext1"
        android:layout_alignLeft="@+id/editext3" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editext3"
        android:layout_below="@+id/editext2"
        android:layout_alignLeft="@+id/editext4" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editext4"
        android:layout_below="@+id/editext3"
        android:layout_alignParentRight="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editext5"
        android:layout_below="@+id/editext4"
        android:layout_alignLeft="@+id/editext4" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="確認"
        android:id="@+id/button2"

        android:textSize="30dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/editext5" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="上一頁"
        android:id="@+id/button"
        android:textSize="30dp"
        android:layout_marginTop="113dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
